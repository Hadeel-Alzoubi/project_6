                    <h2 class="news-card__title">@category.name</h2>
                    <!-- <div class="news-card__post-date"></div> -->
                    <div class="news-card__details-wrapper">
                        <p class="news-card__excerpt">@category.desc</p>
                        @*@Html.Action("f", "Home", new { id = 3}) |*@

                        <button type="submit"><a href="@Url.Action("Products", "Home", new { categoryId = category.id })">اكتشف</a> </button>
