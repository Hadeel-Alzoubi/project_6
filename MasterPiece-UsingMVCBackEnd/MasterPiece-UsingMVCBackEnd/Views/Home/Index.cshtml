        <div class="content-wrapper" id="cate">
            @foreach (var category in Model)
            {
            <div class="news-card">
                <a href="@Url.Action("Products", "Home", new { categoryId = category.id })" class="news-card__card-link"></a>
                @* <img src="~/Content//img/slider-1.jpg " alt="" class="news-card__image">*@
                <img src="~/img/@category.img" class="card-img-top" alt="@category.name" />
