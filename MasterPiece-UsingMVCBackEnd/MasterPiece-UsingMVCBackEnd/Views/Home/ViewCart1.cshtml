@model IEnumerable<MasterPiece_UsingMVCBackEnd.Models.cart>

<div class="cart-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="cart-page-inner">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th>المنتج</th>
                                    <th>السعر</th>
                                    <th>الكمية</th>
                                    <th>المجموع</th>
                                    <th>حذف</th>
                                </tr>
                            </thead>
                            <tbody class="align-middle">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="img">
                                                <a href="#"><img src="~/img/@item.quantity" alt="Image"></a>
                                                <p>@item.quantity</p>
                                            </div>
                                        </td>
                                        <td>@item.quantity JD</td>
                                        <td>
                                            <div class="qty">
                                                <button class="btn-minus"><i class="fa fa-minus"></i></button>
                                                <input type="text" value="@item.quantity">
                                                <button class="btn-plus"><i class="fa fa-plus"></i></button>
                                            </div>
                                        </td>
                                        <td>@(item.quantity * item.quantity) JD</td>
                                        <td><button onclick="location.href='@Url.Action("RemoveFromCart", new { id = item.id })'"><i class="fa fa-trash"></i></button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="cart-summary">
                                <div class="cart-content">
                                    <h1>تفاصيل الاسعار</h1>
                                    <p>السعر الجزئي<span>@Model.Sum(item => item.quantity * item.quantity) JD</span></p>
                                    <p>سعر التوصيل<span>00</span></p>
                                    <h2>المجموع<span>@Model.Sum(item => item.quantity * item.quantity) JD</span></h2>
                                </div>
                                <div class="cart-btn">
                                    <a href="checkout.html"><button>اتمام عملية الشراء</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
