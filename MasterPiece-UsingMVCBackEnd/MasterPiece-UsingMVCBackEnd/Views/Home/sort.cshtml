
@model IEnumerable<MasterPiece_UsingMVCBackEnd.Models.product_list>
<!-- Product List Start -->
<div class="product-view">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-md-12">
                        <div class="product-view-top">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="product-short">
                                        <div class="dropdown">
                                            <div class="dropdown-toggle" data-toggle="dropdown">ترتيب المنتجات حسب</div>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                                <a href="@Url.Action("sort", new { sortOrder = "mostRecent" })" class="dropdown-item">الاحدث</a>
                                                <a href="@Url.Action("sort", new { sortOrder = "mostPopular" })" class="dropdown-item">الاشهر</a>
                                                <a href="@Url.Action("sort", new { sortOrder = "bestSelling" })" class="dropdown-item">الاكثر مبيعا</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var product in Model)
                    {
                        <div class="col-md-4">
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="#">@product.name</a>
                                    <div class="ratting">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <div class="product-image">
                                    <a href="@Url.Action("show", "Home", new { categoryId = product.id })">
                                        <img src="~/img/@product.img" alt="Product Image" height="269.99px">
                                    </a>
                                    <div class="product-action">
                                        <a href="@Url.Action("AddToCart", "Home", new { categoryId = product.id })" class="btn btn-primary"><i class="fa fa-cart-plus"></i></a>
                                        <a href="@Url.Action("AddToWishlist", "Home", new { categoryId = product.id })" class="btn btn-primary"><i class="fa fa-heart"></i></a>
                                        <a href="@Url.Action("show", "Home", new { categoryId = product.id })"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3>@product.price JD</h3>
                                    <a class="btn" href="@Url.Action("AddToCart", "Home", new { categoryId = product.id })"><i class="fa fa-shopping-cart"></i>اطلبها الان</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <!-- Pagination Start -->
                <div class="col-md-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">قبل</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">بعد</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- Pagination Start -->
            </div>

            <!-- Side Bar Start -->

        </div>
    </div>
</div>
<!-- Product List End -->